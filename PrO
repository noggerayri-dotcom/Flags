-- Classic R6 Idle Animation Script
-- Place in StarterPlayerScripts or StarterCharacterScripts

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Wait for character
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Stop all default animations to avoid conflicts
for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
    track:Stop()
end

-- Create the classic R6 idle animation
local idleAnimation = Instance.new("Animation")
idleAnimation.AnimationId = "rbxassetid://180435571" -- Classic R6 idle animation

-- Load the animation
local idleTrack = humanoid:LoadAnimation(idleAnimation)
idleTrack.Priority = Enum.AnimationPriority.Idle -- Standard idle priority
idleTrack.Looped = true
idleTrack:Play()
